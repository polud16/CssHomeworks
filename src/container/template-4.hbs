<header class="header">
    <div>
        {{> logo}}
    </div>
    <nav class="header_nav">
        <div class="header_nav_right">
            {{> nav list=header}}
        </div>
    </nav>
</header>
{{#with main}}
<div class="hero">
    <img src="{{image}}" alt="hero image" class="hero_image">
    <div class="hero_content">
        <h1 class="hero_title">{{heading}}</h1>
        <p class="hero_text">{{description}}</p>
        <button class="main_button button">{{button}}</button>
    </div>
</div>
{{/with}}

<main class="blog">
    {{#each featured}}
    <div class="card">
        <div class="card_img" style="background-image: url({{photo}})"></div>
        <h2 class="card_title">{{heading}}</h2>
        <p class="card_text">{{info}}</p>
        <a href="{{linkUrl}}" class="button card_button">{{linkText}}</a>
    </div>
    {{/each}}
</main>

<div class="action">
    {{#each actions}}
    <div class="action_content">
        <h3 class="action_title">{{heading}}</h3>
        <a href="{{url}}" class="button action_button">{{text}}</a>
    </div>
    {{/each}}
</div>



<footer class="footer">
    <div>
        {{> logo}}
        <span class="footer_copyright">Copyright 2023-2024</span>
    </div>
    {{#each footer}}
    <div>
        <span class="footer_title">{{title}}</span>

        {{> nav list=links isVertical=true}}
    </div>
    {{/each}}
</footer>